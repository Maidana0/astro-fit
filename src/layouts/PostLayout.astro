---
// Layout for individual publication posts
// Optimized for fitness content with social sharing
import { base, navigation } from '~/data/navigation';
import BaseLayout from './BaseLayout.astro';
import Button from '@components/ui/Button.astro';

export interface Props {
  title: string;
  description: string;
  gradient: string;
}

const { title, description, gradient } = Astro.props;
---

<BaseLayout title={`${title} - AstroFit`} description={description}>
  <!-- Post header with gradient background -->
  <header class={`py-16 bg-gradient-to-r ${gradient}`}>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-5">{title}</h1>
      <h2 class="text-xl text-white/90 max-w-2xl mx-auto font-medium">
        {description}
      </h2>
    </div>
  </header>

  <!-- Post content -->
  <section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Go back link -->
      <div class="mb-8">
        <Button variant="outline" size="sm" href={navigation[2].href}>
          Volver
        </Button>
      </div>

      <article class="prose prose-lg max-w-none">
        <slot />
      </article>

      <!-- Post footer with CTA -->
    </div>
  </section>
  <section
    class="py-16 px-8 bg-gradient-to-r from-violet-50 to-purple-50 rounded-2xl text-center"
  >
    <h3 class="text-2xl font-bold text-gray-900 mb-4">
      ¿Te Gustó Este Contenido?
    </h3>
    <p class="text-gray-600 mb-6">
      Seguí nuestros consejos y comenzá tu transformación hoy
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button variant="primary" size="lg" href={navigation[4].href}>
        Consulta Gratuita
      </Button>
      <Button variant="outline" size="lg" href={base}>
        Volver al Inicio
      </Button>
    </div>
  </section>
</BaseLayout>
