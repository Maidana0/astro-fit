---
// Import base layout for consistent site structure
import BaseLayout from '@layouts/BaseLayout.astro';

// Page metadata for Argentine market
const pageTitle = 'Contacto - AstroFit | Entrenamiento Personalizado';
const pageDescription =
  'Contactate con nosotros para comenzar tu transformación. Consulta gratuita y planes personalizados en Buenos Aires.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Page header with contact information -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Contactanos</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
          ¿Listo para transformar tu cuerpo? Contactate con nosotros para una
          consulta gratuita y planes personalizados.
        </p>

        <!-- Contact information for Argentine market -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div class="text-center">
            <h3 class="font-semibold text-gray-900 mb-2">WhatsApp</h3>
            <p class="text-gray-600">+54 9 11 1234-5678</p>
          </div>
          <div class="text-center">
            <h3 class="font-semibold text-gray-900 mb-2">Email</h3>
            <p class="text-gray-600">info@astrofit.com.ar</p>
          </div>
          <div class="text-center">
            <h3 class="font-semibold text-gray-900 mb-2">Ubicación</h3>
            <p class="text-gray-600">Buenos Aires, Argentina</p>
          </div>
        </div>
      </div>

      <!-- Contact form with Argentine terminology -->
      <div class="max-w-2xl mx-auto">
        <!-- <form class="space-y-6" method="POST" action="/contact" netlify> -->
        <form class="space-y-6" id="contact-form">
          <!-- Name field -->
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Nombre Completo
            </label>
            <input
              autocomplete="off"
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition-colors"
              placeholder="Ingresá tu nombre completo"
            />
          </div>

          <!-- Email field -->
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Email
            </label>
            <input
              autocomplete="off"
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition-colors"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Message textarea -->
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Mensaje
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition-colors resize-vertical"
              placeholder="Contanos sobre tus objetivos y cómo podemos ayudarte"
            ></textarea>
          </div>

          <!-- Submit button with purple theme -->
          <div>
            <button
              type="submit"
              class="w-full bg-violet-600 text-white py-3 px-6 rounded-md font-medium hover:bg-violet-700 focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 transition-colors shadow-lg hover:shadow-xl"
            >
              Enviar Mensaje
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form: HTMLFormElement = document.getElementById(
        'contact-form'
      ) as HTMLFormElement;
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Formulario no enviado. Gracias por contactarnos.');
        form.reset();
      });
    });
  </script>
</BaseLayout>
