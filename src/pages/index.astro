---
// Import base layout and page sections
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import TestimonialsSection from '@components/sections/TestimonialsSection.astro';
import PricingSection from '@components/sections/PricingSection.astro';
import SocialMediaGrid from '~/components/sections/SocialMediaGrid.astro';
import CallToAction from '@components/sections/CallToAction.astro';

// Page metadata for Argentine PT market
const pageTitle = 'AstroFit - Transformá Tu Cuerpo Con Un Profesional';
const pageDescription =
  'Entrenamiento personalizado y asesoría nutricional. Estudiante de Educación Física con seguimiento por WhatsApp. Resultados garantizados.';
---

<!-- 
  Homepage Layout Structure
  - Uses BaseLayout for consistent site-wide structure (Header/Footer)
  - Sections are rendered in strategic order for conversion funnel
  - All components use static rendering for optimal performance
-->
<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- 
    Hero Section: Primary conversion area
    - Captures attention with transformation focus
    - Argentine market terminology and cultural context
    - Clear CTAs for immediate engagement
  -->
  <Hero />

  <!-- 
    Social Media Grid: Authority and freshness
    - Recent content tips for ongoing value
    - Builds authority through consistent content
    - Drives cross-platform engagement
  -->
  <SocialMediaGrid />

  <!-- 
    Pricing Section: Conversion optimization
    - ARS currency for local market relevance
    - Tiered pricing with popular plan highlighting
    - Clear value progression and CTAs
  -->
  <PricingSection />

  <!-- 
    Testimonials: Social proof and validation
    - Real client success stories
    - Builds trust through peer recommendations
    - Addresses common concerns and objections
  -->
  <TestimonialsSection />

  <!-- 
    Call to Action: Final conversion opportunity
    - Clear next steps for interested visitors
    - Multiple engagement options
  -->
  <CallToAction />
</BaseLayout>

<!-- 
  Argentine PT Market Architecture:
  - Conversion-optimized funnel: Hero → Pricing → Social Proof → Authority
  - Value proposition moved to services page for better UX flow
  - Local terminology and cultural context throughout
  - ARS pricing and WhatsApp communication preferences
  - Static rendering ensures fast loading for mobile-first Argentine market
-->
