---
// Import components and data
import BaseLayout from '@layouts/BaseLayout.astro';
import ServiceCard from '@components/ui/ServiceCard.astro';
import Button from '@components/ui/Button.astro';
import { services } from '@data/services.ts';
import ValueProp from '~/components/sections/ValueProp.astro';

// Page metadata for services page
const pageTitle = 'Servicios - AstroFit | Entrenamiento y Nutrición';
const pageDescription =
  'Descubrí nuestros servicios de entrenamiento personalizado y asesoría nutricional. Planes adaptados a tus objetivos en Buenos Aires.';
---

<!-- 
    Services Grid: Core offerings showcase
    - Three distinct service tiers with local terminology
    - Emphasizes personalized approach and WhatsApp support
    - Builds understanding of value proposition
  -->
<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Page header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
          Nuestros Servicios
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Transformá tu cuerpo y mente con nuestros servicios personalizados.
          Cada plan está diseñado para adaptarse a tu estilo de vida y objetivos
          específicos.
        </p>
      </div>

      <!-- Services grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {services.map((service) => <ServiceCard service={service} />)}
      </div>

      <!-- Value Proposition Section -->
      <ValueProp />

      <!-- CTA section -->
      <div class="text-center bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">
          ¿Listo Para Comenzar Tu Transformación?
        </h2>
        <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
          Contactanos hoy para una consulta gratuita y descubrí cuál es el plan
          perfecto para vos.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="primary" size="lg" href="/contacto">
            Consulta Gratuita
          </Button>
          <Button variant="outline" size="lg" href="/#precios">
            Ver Precios
          </Button>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
