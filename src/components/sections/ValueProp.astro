---
// Value proposition section for Argentine PT market
// Highlights professional credentials and unique selling points
import { valuePropositions } from '@data/valueProp.ts';
---

<!-- 
  Value Proposition Section
  - Builds trust through professional credentials
  - Emphasizes unique differentiators for PT market
  - Uses local terminology and cultural context
-->
<section class="py-16 bg-gradient-to-r from-violet-50 to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        ¿Por Qué Elegir Nuestro Método?
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Combinamos experiencia profesional con tecnología y seguimiento
        personalizado
      </p>
    </div>

    <!-- Value propositions grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        valuePropositions.map((prop) => (
          <div class="text-center p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-violet-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-violet-600 font-bold text-2xl">
                {<prop.icon class="size-7" />}
              </span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {prop.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">{prop.description}</p>
          </div>
        ))
      }
    </div>

    <!-- 
      Results guarantee section
      Builds confidence and reduces purchase anxiety
    -->
    <div class="mt-12 text-center bg-white p-8 rounded-lg shadow-md">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">
        Garantía de Resultados
      </h3>
      <p class="text-lg text-gray-600 mb-6 max-w-3xl mx-auto">
        Si seguís el plan al 100% durante 30 días y no ves cambios
        significativos, te devolvemos el dinero. Así de seguros estamos de
        nuestro método.
      </p>
      <div
        class="flex justify-center items-center space-x-8 text-sm text-gray-500"
      >
        <span>✓ Sin letra chica</span>
        <span>✓ Garantía real</span>
        <span>✓ Resultados medibles</span>
      </div>
    </div>
  </div>
</section>

<!-- 
  Value proposition strategy:
  - Professional credentials build authority and trust
  - WhatsApp communication addresses local preferences
  - Flexibility removes common objections
  - Money-back guarantee reduces purchase risk
-->
