---
// Post content card component for beautiful content display
export interface Props {
  title: string;
  content: string;
  icon?: string;
}

const { title, content, icon } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg p-6 mb-6 border-l-4 border-violet-500 hover:shadow-xl hover:scale-[1.02] transition-all duration-300">
  {icon && (
    <div class="flex items-center mb-4">
      <span class="text-3xl mr-3">{icon}</span>
      <h3 class="text-xl font-bold text-gray-900">{title}</h3>
    </div>
  )}
  {!icon && <h3 class="text-xl font-bold text-gray-900 mb-4">{title}</h3>}
  
  <div class="prose prose-gray max-w-none text-gray-700 leading-relaxed">
    <div set:html={content} />
  </div>
</div>
