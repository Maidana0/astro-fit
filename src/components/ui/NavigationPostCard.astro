---
import { base } from '@data/navigation';
const { slug, gradient, title, description } = Astro.props.post;
---

<a
  href={`${base}publicaciones/${slug}`}
  class={`group block bg-gradient-to-br ${gradient} aspect-square rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:scale-105`}
>
  <div class="w-full h-full flex flex-col justify-end p-6 text-white">
    <div class="bg-black/20 backdrop-blur-sm rounded-lg p-4">
      <h3 class="font-semibold text-lg mb-2">{title}</h3>
      <p class="text-sm opacity-90">{description}</p>
    </div>
  </div>
</a>
